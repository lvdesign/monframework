<div class="row">

    <div class="col-md-4">{{ field('name', item.name, "Titre de l'article") }}</div>
    <div class="col-md-4">{{ field('category_id', item.categoryId, "Categorie", { options: categories}) }}</div>
    <div class="col-md-4">{{ field('published', item.published, "En ligne", { type: 'checkbox'}) }}</div>

</div>
<div class="row">  

    <div class="col-md-4">
    {% if item.image %}
    <img src="{{ item.thumb }}" alt="{{ item.name }}" style="width:50%" />
     {% endif  %}
    </div>

    <div class="col-md-4">{{ field('image', item.image, "Image", { type: 'file'} ) }}</div>

    <div class="col-md-4">{{ field('slug', item.slug, "Lien") }}</div>
</div>

{{ field('content', item.content, "content", {type: 'textarea'}) }}
